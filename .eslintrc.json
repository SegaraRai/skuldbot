{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script",
    "impliedStrict": true
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "semi": [2, "always"],
    "quotes": [1, "single"],
    "comma-dangle": [1, "always-multiline"],

    "no-irregular-whitespace": [1, {
      "skipTemplates": true
    }],
    "no-console": 0,
    "no-constant-condition": [1, {
      "checkLoops": false
    }],
    "no-empty": [1, {
      "allowEmptyCatch": true
    }],
    "no-unused-vars": [1, {
      "vars": "all",
      "args": "all",
      "ignoreRestSiblings": false,
      "caughtErrors": "none"
    }],

    "no-else-return": 1,
    "no-loop-func": 1,
    "no-return-assign": 1
  }
}
